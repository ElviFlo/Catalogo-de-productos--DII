{
  "name": "catalogo-monorepo",
  "private": true,
  "scripts": {
    "start": "npm --prefix backend run start",
    "start:dev": "npm --prefix backend run start:dev",
    "dev": "npm --prefix backend run dev",
    "build": "npm --prefix backend run build",
    "seed": "npm --prefix backend run seed",
    "test:e2e": "npm --prefix backend run test:e2e",
    "prisma:generate": "npm --prefix backend run prisma:generate",
    "prisma:push": "npm --prefix backend run prisma:push",
    "frontend:dev": "npm --prefix frontend run dev",
    "frontend:build": "npm --prefix frontend run build",
    "frontend:preview": "npm --prefix frontend run preview",
     "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "dev_all": "npm-run-all --parallel dev:backend dev:frontend"

  },
  "dependencies": {
    "@nestjs/common": "^11.1.6",
    "@nestjs/core": "^11.1.6",
    "@nestjs/platform-express": "^11.1.6",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2"
  },
  "devDependencies": {
    "@prisma/client": "^6.14.0",
    "npm-run-all": "^4.1.5",
    "prisma": "^6.14.0"
  }
}
