model Medicamento {
  id             String                @id @default(cuid())
  nombre         String
  descripcion    String
  farmaceutica   String
  concentracion  String?
  fechaCaducidad DateTime
  tipo           TipoMedicamento
  volumen        Int?
  cantidad       Int?
